<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnIcon"
        android:layout_width="@dimen/profile_editor_circle_icon"
        android:layout_height="@dimen/profile_editor_circle_icon"
        android:scaleType="centerInside"
        android:src="@drawable/icon_profile_i_default"
        android:padding="@dimen/profile_editor_icon_pick_padding"
        android:background="@android:color/transparent"
        android:foreground="@drawable/btn_effect"
        app:tint="@color/profile_editor_icon_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>