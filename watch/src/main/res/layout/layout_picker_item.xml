<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/picker_item_padding_top_bottom"
    android:paddingBottom="@dimen/picker_item_padding_top_bottom"
    android:paddingStart="@dimen/picker_item_padding_sides"
    android:paddingRight="@dimen/picker_item_padding_sides"
    android:foreground="@drawable/btn_design_effect_square"
    android:clickable="true"
    android:id="@+id/radioContainer">

        <ImageView
            android:id="@+id/selectIcon"
            android:layout_width="@dimen/radio_checkbox_size"
            android:layout_height="@dimen/radio_checkbox_size"
            android:src="@drawable/radio_on"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/radioName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/radio_checkbox_text"
            android:textColor="@color/radio_checkbox_text"
            android:layout_marginStart="@dimen/radio_checkbox_text_margin_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/selectIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>